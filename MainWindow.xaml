<Window x:Class="WpfDvaaa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDvaaa"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="43">
    <UniformGrid Columns="2">
        <Label>Ime:</Label>
        <TextBox Text="{Binding Path=Ime, UpdateSourceTrigger=PropertyChanged}" />
        <Label>Prezime:</Label>
        <TextBox Text="{Binding Path=Prezime}" />
        <Label>Plata:</Label>
        <TextBox Text="{Binding Path=TrecaPlata}" />
        <Label>Ime:</Label>
        <Label Content="{Binding Path=Ime}"></Label>
        <Label>Prezime:</Label>
        <Label Content="{Binding Path=Prezime}"></Label>
        <Label>Plata:</Label>
        <Label Content="{Binding Path=TrecaPlata}"></Label>
        <Button Click="Prikaz">Prikaz</Button>
        <Button Name="dugme" MouseEnter="MisUpao" MouseLeave="MisOtisao" Click="Unos">Unos</Button>
    </UniformGrid>
</Window>